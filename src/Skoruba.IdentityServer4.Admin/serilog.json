    "Serilog": {
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft.EntityFrameworkCore": "Warning"
        }
      },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
              "Args": {
